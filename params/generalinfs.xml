	<!--   <instrument>loandepo</instrument> -->
	<!--   <isStp>false</isStp> -->
	<!--   <layer>FS</layer> -->
	<!-- </output> -->
      </workflow>
      <instruments>
	<instrument name="equity">
	  <toleranceRep>2</toleranceRep> 
	  <partSell>20</partSell> 
	  <ownCountry>20</ownCountry> 
	  <volumetry>100</volumetry> 
	  <volumetryTolerance>2</volumetryTolerance> 
	</instrument>
	<instrument name="loandepo">
	  <partLoan>50</partLoan> 
	  <ownCountry>40</ownCountry> 
	  <volumetry>10</volumetry> 
	  <volumetryTolerance>2</volumetryTolerance> 
	  <repartitionTolerance>2</repartitionTolerance> 
	  <rateValue>20</rateValue> 
	  <rateValueTolerance>2</rateValueTolerance> 
	  <partRateVariable>2</partRateVariable> 
	</instrument>
      </instruments>
      <portfolios>
	<portfolio name="?equity?">
	  <books>
	    <book name="bookequityeuro">
	      <filters>
		<filter type="instrument" value="equity"/>
		<filter type="currency" value="EU"/>
	      </filters>
	    </book>
	    <book name="bookfundingeuro">
	      <filters>
		<filter type="instrument" value="loandepo"/>
		<filter type="currency" value="EU,USD"/>
	      </filters>
	    </book>
	    <book name="EQUOTHERS">
	      <filters>
		<filter type="instrument" value="equity"/>
		<filter type="currency" value="USD"/>
	      </filters>
	    </book>
	  </books>
	</portfolio>
	<portfolio name="?derivative?">
	  <books>
	    <book name="bookdervius">
	    	<filters>
	    		<filter type="instrument" value="equity,loandepo"></filter><filter type="currency" value="EU"></filter>
	    		</filters></book>
	    <book name="bookfundingus">
	    	<filters><filter type="instrument" value="loandepo"></filter><filter type="currency" value="EU"></filter></filters></book>
	    <book name="DERIVFUNDEUR"/>
	    <book name="DERIVOTHERS"/>
	  </books>
	</portfolio>
      </portfolios>
    </businessUnit>
  </bussinessUnits>
</generalSettings>
