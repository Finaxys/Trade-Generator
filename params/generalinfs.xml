<generalSettings>
  <name>Finaxys Bank</name>
  <side>BuySide</side>
  <budget>10000000</budget>
  <ownCountry>FR</ownCountry>
  <bussinessUnits>
    <businessUnit name="ged" ratio="100" instrument="equity">
      <workflow>
	<output>
	  <format>CSV</format>
	  <path>trades</path>
	  <instrument>all</instrument>
	  <isStp>false</isStp>
	  <layer>FS</layer>
	</output>
